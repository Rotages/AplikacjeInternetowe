{% extends 'base.html.twig' %}

{% block title %}Edit Measurement{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Measurement</h1>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.celsius) }}
            {{ form_widget(form.celsius, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.celsius) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.humidity) }}
            {{ form_widget(form.humidity, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.humidity) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.location) }}
            {{ form_widget(form.location, {'attr': {'class': 'form-select'}}) }}
            <div class="text-danger">
                {{ form_errors(form.location) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.date) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.date) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="{{ path('app_measurement_index') }}" class="btn btn-secondary">Back to list</a>
        {{ form_end(form) }}

        <form method="post" action="{{ path('app_measurement_delete', { id: measurement.id }) }}" onsubmit="return confirm('Are you sure?');">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
